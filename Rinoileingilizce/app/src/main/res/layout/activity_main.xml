<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/SayılarMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="108dp"
        android:onClick="sayilaragit"
        android:src="@drawable/sayilarson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/FoodDrinkMain"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_marginTop="30dp"
        android:onClick="meyveleregit"
        android:src="@drawable/fooddrink"
        app:layout_constraintEnd_toStartOf="@+id/HarflerMain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bodyMain"
        app:layout_constraintTop_toBottomOf="@+id/baslikRino"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_width="120dp" />

    <ImageView
        android:id="@+id/animalsMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="hayvanlaragit"
        android:src="@drawable/animals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HarflerMain"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/colorsMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="76dp"
        android:onClick="renkleregit"
        android:src="@drawable/colours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodyMain"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/bodyMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:onClick="vucudagit"
        android:src="@drawable/body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikRino"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/baslikRino"
        android:layout_width="172dp"
        android:layout_height="92dp"
        android:src="@drawable/ustllooggo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/HarflerMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="harfleregit"
        android:src="@drawable/leterslast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikRino"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/rinoMain"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/SayılarMain"
        app:layout_constraintEnd_toStartOf="@+id/animalsMain"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toEndOf="@+id/colorsMain"
        app:layout_constraintTop_toBottomOf="@+id/FoodDrinkMain"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@drawable/llooggoo" />


</android.support.constraint.ConstraintLayout>