<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/SayÄ±larMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="47dp"
        android:onClick="sayilaragit"
        android:src="@drawable/sayilarson"
        app:layout_constraintEnd_toStartOf="@+id/animalsMain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/colorsMain"
        app:layout_constraintTop_toBottomOf="@+id/rinoMain"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/FoodDrinkMain"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_marginTop="30dp"
        android:onClick="meyveleregit"
        android:src="@drawable/foodson"
        app:layout_constraintEnd_toStartOf="@+id/HarflerMain"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bodyMain"
        app:layout_constraintTop_toBottomOf="@+id/baslikRino"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_width="120dp" />

    <ImageView
        android:id="@+id/animalsMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="hayvanlaragit"
        android:src="@drawable/anison"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rinoMain"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/colorsMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="13dp"
        android:onClick="renkleregit"
        android:src="@drawable/colorson"
        app:layout_constraintTop_toBottomOf="@+id/rinoMain"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/bodyMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:onClick="vucudagit"
        android:src="@drawable/bodyson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikRino"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/baslikRino"
        android:layout_width="172dp"
        android:layout_height="92dp"
        android:layout_marginEnd="119dp"
        android:layout_marginRight="119dp"
        android:src="@drawable/ustllooggo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/HarflerMain"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="harfleregit"
        android:src="@drawable/leterslast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikRino"
        tools:ignore="MissingConstraints,OnClick" />

    <ImageView
        android:id="@+id/rinoMain"
        android:layout_width="219dp"
        android:layout_height="217dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FoodDrinkMain"
        app:srcCompat="@drawable/llooggoo" />


</android.support.constraint.ConstraintLayout>