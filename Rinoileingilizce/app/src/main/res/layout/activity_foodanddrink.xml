<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".food_drink">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toStartOf="@+id/baslikRino2"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/fdvg"
            android:layout_width="169dp"
            android:layout_height="197dp"
            android:onClick="intentvege"
            app:srcCompat="@drawable/vegetables"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="194dp" />

        <ImageView
            android:id="@+id/fddr"
            android:layout_width="169dp"
            android:layout_height="197dp"
            android:onClick="intentdrink"
            app:srcCompat="@drawable/drinks"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="205dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/fdfd"
            android:layout_width="169dp"
            android:layout_height="197dp"
            android:onClick="intentfood"
            app:srcCompat="@drawable/foods"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="438dp" />

        <ImageView
            android:id="@+id/fdfr"
            android:layout_width="169dp"
            android:layout_height="197dp"
            android:onClick="meyveye"
            app:srcCompat="@drawable/fruits"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="438dp" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>